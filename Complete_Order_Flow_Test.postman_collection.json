									"        pm.environment.set(\"product_id_1\", jsonData.result[0].id);",
									"        pm.environment.set(\"product_name_1\", jsonData.result[0].name);",
									"        pm.environment.set(\"product_price_1\", jsonData.result[0].basePrice);",
									"        pm.environment.set(\"product_weight_1\", jsonData.result[0].weightGram);",
									"        ",
									"        if (jsonData.result.length > 1) {",
									"            pm.environment.set(\"product_id_2\", jsonData.result[1].id);",
									"            pm.environment.set(\"product_name_2\", jsonData.result[1].name);",
									"            pm.environment.set(\"product_price_2\", jsonData.result[1].basePrice);",
									"            pm.environment.set(\"product_weight_2\", jsonData.result[1].weightGram);",
									"        }",
									"        ",
									"        console.log(\"Products found:\", jsonData.result.length);",
									"    }",
									"}",
									"",
									"pm.test(\"Products found\", function () {",
									"    pm.response.to.have.status(200);",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.result.length).to.be.above(0);",
									"});"
