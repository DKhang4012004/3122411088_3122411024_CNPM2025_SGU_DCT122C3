	"item": [
		{
			"name": "1. Authentication",
			"item": [
				{
					"name": "1.1 Login - Get Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Save token to environment",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.result && jsonData.result.token) {",
									"        pm.environment.set(\"auth_token\", jsonData.result.token);",
									"        pm.environment.set(\"user_id\", jsonData.result.user.id);",
									"        console.log(\"Token saved:\", jsonData.result.token);",
									"    }",
									"}",
									"",
									"pm.test(\"Login successful\", function () {",
									"    pm.response.to.have.status(200);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"customer1\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"auth",
								"login"
							]
						},
						"description": "Login với user: customer1 / password123"
					},
					"response": []
				},
				{
					"name": "1.2 Validate Token",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"token\": \"{{auth_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/validate",
							"host": [
